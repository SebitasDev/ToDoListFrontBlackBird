<MudDialog>
    <TitleContent>
        Tarea eliminada
    </TitleContent>
    <DialogContent>
        @ContentText
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string ContentText { get; set; }

    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
}